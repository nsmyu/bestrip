<main class="main-content position-relative">
  <div class="container-fluid py-sm-4 py-4 px-1 min-vh-100">
    <div class="max-width-850 mx-auto">
      <div class="card mb-2 p-3 p-sm-4 text-dark ">
        <div class="row">
          <div class="col">
            <div class="search-form">
              <input type="search" id="searchbox_text_input" placeholder="スカイツリー、東京駅 カフェ" autocomplete="false">
              <% if @itinerary %>
                <input type="hidden" id="itinerary_id" value="<%= @itinerary.id %>">
              <% end %>
            </div>
          </div>
          <div class="col-md-5 mt-2 mt-md-0 ps-md-1 d-flex">
            <p class="d-flex text-xs align-items-center"><%= message %></p>
          </div>
        </div>
        <div class="mt-3">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</main>
