<%= turbo_stream.update "user_place" do %>
  <%= form_with model: [@placeable, @place] do |f| %>
    <%= f.hidden_field :place_id, value: @place_id %>
    <label class="mb-0">
      <i class="material-symbols-outlined fs-3 text-secondary cursor-pointer">heart_plus</i>
      <%= f.submit class: "d-none" %>
    </label>
  <% end %>
<% end %>
<%= turbo_stream.update "itinerary_place" do %>
  <%= form_with model: [@placeable, @place] do |f| %>
    <%= f.hidden_field :place_id, value: @place_id %>
    <%= f.submit "作成中のプランに追加", class: "btn bg-gradient-primary mt-3 w-100" %>
  <% end %>
<% end %>
