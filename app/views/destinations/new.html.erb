<%= render "layouts/modal", title: "旅のプランに追加" do %>
  <%= turbo_frame_tag "destination" do %>
    <%= form_with model: [@itinerary, @destination], data: { controller: "destination", destination_target: "form" } do |f| %>
      <div class="input-group input-group-outline row mx-0 mb-4">
        <label class="m-0 mb-1 px-0 fw-bold">スポットを追加する旅のプラン</label>
        <label class="select-box px-0">
          <%= f.select :itinerary_id, @itineraries_titles, { include_blank: "旅のプランを選択" }, class: "form-control cursor-pointer", data: { destination_target: "select", action: "change->destination#setItinerary" } %>
        </label>
      </div>
      <%= f.hidden_field :place_id, value: @place_id %>
      <%= f.submit "行きたい場所に追加", class: "btn bg-gradient-primary d-block mt-3 mx-auto", data: { destination_target: "submit" }, disabled: true %>
    <% end %>
  <% end %>
<% end %>
