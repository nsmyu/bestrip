<%= turbo_frame_tag "favorite" do %>
  <%= form_with model: @favorite do |f| %>
    <%= f.hidden_field :place_id, value: @place_id %>
    <% if favorites_include?(@place_id) %>
      <button class="btn btn-outline-primary d-block mt-3 w-100" disabled>お気に入りに追加済み</button>
    <% else %>
      <%= f.submit "お気に入りに追加する", class: "btn bg-gradient-primary d-block mt-3 w-100" %>
    <% end %>
  <% end %>
<% end %>
