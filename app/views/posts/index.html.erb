<main class="main-content position-relative">
  <div class="container-fluid py-4 px-sm-4 min-vh-100">
    <div class="mx-auto max-width-900">
      <div class="row">
        <%= render @posts %>
      </div>
    </div>
  </div>
  <div class="fixed-plugin">
    <div class="fixed-plugin-button position-fixed rounded-pill px-3 py-2 btn bg-gradient-primary">
      <% if current_user %>
        <%= link_to :new_post, data: { turbo_frame: "modal" } do %>
          <p class="py-1 text-white text-sm fw-bold"><i class="material-icons me-1" style="vertical-align: -4px;">add_circle</i> 旅の思い出を投稿</p>
        <% end %>
      <% else %>
        <%= link_to :new_user_session do %>
          <p class="py-1 text-white text-sm fw-bold"><i class="material-icons me-1" style="vertical-align: -4px;">add_circle</i> 旅の思い出を投稿</p>
        <% end %>
      <% end %>
    </div>
  </div>
</main>
