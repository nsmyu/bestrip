<div class="mb-3 p-3 bg-white border-radius-lg">
  <div class="d-flex justify-content-between">
    <h5 class="mb-2"><%= @post.title %></h5>
    <% if current_user == @post.user %>
      <div class="dropdown">
        <label for="post_dropdown" class="mb-0 cursor-pointer">
          <i class="material-icons ps-1 text-secondary schedule-dropdown-icon" style="vertical-align: -5px;">more_horiz</i>
        </label>
        <button class="d-none" id="post_dropdown" data-bs-toggle="dropdown"></button>
        <ul class="border dropdown-menu dropdown-menu-end mt-2"></li>
          <li class="align-items-center">
            <%= link_to :edit_post, class: "dropdown-item", data: { turbo_frame: "modal" } do %>
              <span class="material-symbols-outlined pe-1 fs-6" style="vertical-align: -3.5px;">edit</span>編集
            <% end %>
          </li>
          <li>
            <%= link_to [:post, id: @post.id], class: "dropdown-item text-danger", data: { turbo_method: :delete, turbo_confirm: 'この投稿を削除しますか？この操作は取り消せません。' } do %>
              <span class="material-symbols-outlined pe-1 fs-6" style="vertical-align: -3.5px;">delete</span>削除
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="d-flex pb-3 border-bottom">
    <%= image_tag @post.user.avatar.url, class: "rounded-circle avatar-thumbnail me-2" %>
    <div class="d-table">
      <p class="text-dark text-sm fw-bold d-table-cell align-middle"><%= @post.user.name %></p>
    </div>
  </div>
  <p class="py-3 fs-15 text-dark"><%= @post.caption %></p>
  <p class="text-sm"><%= date_posted(@post) %></p>
</div>
