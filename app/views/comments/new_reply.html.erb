<%= turbo_frame_tag "comment_form" do %>
  <div class="d-flex align-items-center p-3 bg-white border-bottom">
    <%= link_to [:user, id: current_user.id], data: { turbo_frame: "_top" }, class: "hover-opacity" do %>
      <%= image_tag current_user.avatar.url, class: "avatar avatar-thumbnail" %>
    <% end %>
    <div class="flex-fill ms-2">
      <%= form_with model: @new_reply do |f| %>
        <div class="input-group input-group-outline d-flex align-items-center">
          <%= f.hidden_field :parent_id, value: @new_reply.parent.id %>
          <%= f.text_area :content, id: "text_input", class: "form-control", rows: "1", placeholder: "#{@comment.user.name}さんに返信…", autofocus: true %>
          <%= link_to [:post, id: @comment.post], data: { turbo_frame: "comment_form" }, class: "d-flex ms-2 hover-opacity text-secondary" do %>
            <i class="material-icons me-1">cancel</i>
          <% end %>
          <%= button_tag type: "submit", id: "submit_btn", class: "d-flex border-0 bg-transparent hover-opacity text-secondary text-sm ms-1 px-0" do %>
            <i class="material-icons">send</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
