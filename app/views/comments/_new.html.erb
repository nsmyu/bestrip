<%= turbo_frame_tag "comment_form" do %>
  <div class="d-flex align-items-center p-3 bg-white border-bottom">
    <%= link_to [:user, id: current_user.id], data: { turbo_frame: "_top" }, class: "hover-opacity" do %>
      <%= image_tag current_user.avatar.url, class: "avatar avatar-thumbnail" %>
    <% end %>
    <div class="flex-fill ms-2">
      <%= form_with model: @new_comment do |f| %>
        <div class="input-group input-group-outline d-flex align-items-center">
          <%= f.text_area :content, id: "text_input", class: "form-control", rows: "1", placeholder: "コメントを入力…" %>
          <%= button_tag type: "submit", id: "submit_btn", class: "d-flex border-0 bg-transparent hover-opacity text-secondary ms-2 px-0" do %>
            <i class="material-icons">send</i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
