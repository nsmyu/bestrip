<% provide :title, "パスワード変更" %>
<%= render 'layouts/sidenav' %>
<main class="main-content position-relative bg-pearl-white">
  <h5 class="page-heading">パスワード変更</h5>
  <div class="container-fluid py-3 py-sm-4 px-0 min-vh-80">
    <div class="card mx-auto p-4 max-width-550">
      <div class="px-2">
        <% if resource.guest? %>
          <p class="mb-3 text-danger text-sm">※ゲストユーザーの方は変更できません。</p>
        <% end %>
        <%= form_with model: resource, url: user_registration_path, data: { turbo: false } do |f| %>
          <div class="input-group input-group-outline row mx-0 mt-1 mb-4">
            <%= f.label :current_password, class: "mx-0 mb-1 px-0 fw-bold" do %>
              現在のパスワード <span class="required">必須</span>
            <% end %>
            <%= f.password_field :current_password, class: "form-control", disabled: resource.guest?, autocomplete: "current-password", placeholder: "現在のパスワードを入力" %>
            <div class="error-message">
              <%= resource.errors.full_messages_for(:current_password).first if resource.errors.any? %>
            </div>
          </div>
          <div class="input-group input-group-outline row mx-0 mb-4">
            <%= f.label :password, class: "mx-0 mb-1 px-0 fw-bold" do %>
              新しいパスワード（半角英数字6文字以上）<span class="required">必須</span>
            <% end %>
            <%= f.password_field :password, class: "form-control", disabled: resource.guest?, autocomplete: "new-password", placeholder: "新しいパスワードを入力" %>
            <div class="error-message">
              <%= resource.errors.full_messages_for(:password).first if resource.errors.any? %>
            </div>
          </div>
          <div class="input-group input-group-outline row mx-0 mb-4">
            <%= f.label :password_confirmation, class: "mx-0 mb-1 px-0 fw-bold" do %>
              新しいパスワード（確認用）<span class="required">必須</span>
            <% end %>
            <%= f.password_field :password_confirmation, class: "form-control", disabled: resource.guest?, autocomplete: "new-password", placeholder: "確認のため再度入力" %>
            <div class="error-message">
              <%= resource.errors.full_messages_for(:password_confirmation).first if resource.errors.any? %>
            </div>
          </div>
          <div class="mt-3 text-center ms-auto">
            <%= f.submit "変更する", class: "btn bg-gradient-primary mt-4 px-6 btn-lg", disabled: resource.guest? %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
