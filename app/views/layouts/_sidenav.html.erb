<aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl fixed-start mt-4 ms-3 py-2 bg-white z-index-3" id="sidenav-main">
  <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to :users_edit_profile, class:"nav-link sidenav-link text-dark" do %>
          <div class="row">
            <div class="col-3 d-flex ps-1 pe-0 align-items-center">
              <%= image_tag current_user.avatar.url, class: "circle-image" %>
            </div>
            <div class="col-9 ">
              <p class="text-sm fw-bold text-ellipsis"><%= current_user.name %></p>
            </div>
          </div>
        <% end %>
      </li>
      <hr class="horizontal dark my-1">
      <li class="nav-item">
        <%= link_to :itineraries, class:"nav-link sidenav-link" do %>
          <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
            <i class="material-icons text-dark">library_books</i>
          </div>
          <span class="ms-1 text-dark">旅のプラン一覧</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to [:user_places, user_id: current_user.id], class:"nav-link sidenav-link" do %>
          <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
            <i class="material-icons text-dark">favorite_border</i>
          </div>
          <span class="ms-1 text-dark">お気に入り</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to [:user_places_find, user_id: current_user.id], class:"nav-link sidenav-link" do %>
          <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
            <i class="material-icons text-dark">search</i>
          </div>
          <span class="ms-1 text-dark">スポットを探す</span>
        <% end %>
      </li>
    </ul>
  </div>
</aside>
