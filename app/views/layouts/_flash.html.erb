<% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible text-white py-2 fw-bold" role="alert">
    <%= notice %>
    <button type="button" class="btn-close text-lg py-1 opacity-10" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible text-white py-2 fw-bold" role="alert">
    <%= alert %>
    <button type="button" class="btn-close text-lg py-1 opacity-10" data-bs-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
