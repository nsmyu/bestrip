<% if user_signed_in? %>
  <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas">
    <div class="navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl position-relative">
      <label class="position-absolute top-6 end-2 cursor-pointer">
        <i class="material-icons text-secondary">close</i>
        <button type="button" class="d-none" data-bs-dismiss="offcanvas"></button>
      </label>
      <div class="mt-4 ms-2 pt-1">
        <% if request.fullpath.include?('itineraries/') %>
          <%= render 'layouts/sidenav_links_itinerary' %>
        <% elsif controller_name == "registrations" %>
          <%= render 'layouts/sidenav_links_user' %>
        <% else %>
          <%= render 'layouts/sidenav_links' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
