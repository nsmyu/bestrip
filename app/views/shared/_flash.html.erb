<div id="flash">
  <% if flash[:notice] %>
    <div class="alert flash alert-dismissible py-2 border-radius-md" role="alert">
      <%= notice %>
      <button type="button" class="btn-close text-lg py-1" data-bs-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
</div>
