<main class="main-content  mt-0">
  <section>
    <div class="page-header max-vh-100">
      <div class="container my-7">
        <div class="row">
          <div class="col-6 d-lg-flex d-none h-100 pe-0 position-absolute top-0 start-0 text-center justify-content-center flex-column">
            <div class="position-relative bg-gradient-primary h-100 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center" style="background-image: url(<%= asset_path 'sign_up.jpg' %>); background-size: cover;">
            </div>
          </div>
          <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto me-lg-5">
            <div class="card card-plain">
              <div class="card-header">
                <h4 class="font-weight-bolder">アカウント登録</h4>
              </div>
              <div class="card-body">
                <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), local: true)  do |f| %>
                  <div class="input-group input-group-outline mb-3 <%= "is-filled" unless resource[:name].blank? %>" >
                    <%= f.label :name, class: "form-label" do%>
                      ニックネーム<span class="required">*</span>
                    <% end %>
                    <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
                    <div class="<%= "error-message" if resource.errors.messages.key?(:name) %>" >
                      <%= resource.errors.full_messages_for(:name).first if resource.errors.any? %>
                    </div>
                  </div>
                  <div class="input-group input-group-outline mb-3 <%= "is-filled" unless resource[:email].blank? %>">
                    <%= f.label :email, class: "form-label" do%>
                      メールアドレス<span class="required">*</span>
                    <% end %>
                    <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
                    <div class="<%= "error-message" if resource.errors.messages.key?(:email) %>" >
                      <%= resource.errors.full_messages_for(:email).first if resource.errors.any? %>
                    </div>
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <%= f.label :password, class: "form-label" do %>
                      パスワード（半角英数字6〜128文字）<span class="required">*</span>
                    <% end %>
                    <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                    <div class="<%= "error-message" if resource.errors.messages.key?(:password) %>" >
                      <%= resource.errors.full_messages_for(:password).first if resource.errors.any? %>
                    </div>
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <%= f.label :password_confirmation, class: "form-label" do %>
                      パスワード（確認用）<span class="required">*</span>
                    <% end %>
                    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
                    <div class="<%= "error-message" if resource.errors.messages.key?(:password_confirmation) %>" >
                      <%= resource.errors.full_messages_for(:password_confirmation).first if resource.errors.any? %>
                    </div>
                  </div>
                  <div class="text-center actions">
                    <%= f.submit "新規登録", data: { turbo: false }, class: "btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0" %>
                  </div>
                <% end %>
              </div>
              <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p class="mb-2 text-sm mx-auto">
                  アカウントをお持ちの方は
                  <%= link_to "ログイン", :new_user_session, data: { turbo: false }, class: "text-primary text-gradient font-weight-bold" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>


