<%= render 'layouts/sidenav' %>
<main class="main-content position-relative">
  <div class="container-fluid py-sm-5 px-sm-6 py-4 px-3 min-vh-100">
    <div class="card w-md-60 mx-auto p-4">
      <div class="border-bottom mb-4">
        <h5>パスワード変更</h5>
      </div>
      <div class="px-2">
        <%= form_with model: resource, url: user_registration_path, data: { turbo: false } do |f| %>
          <div class="input-group input-group-outline row mx-0 mb-4">
            <%= f.label :current_password, class: "mx-0 mb-1 px-0 fw-bold" do %>
              現在のパスワード <span class="required">*</span>
            <% end %>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            <div class="<%= "error-message" if resource.errors.messages.key?(:current_password) %>" >
              <%= resource.errors.full_messages_for(:current_password).first if resource.errors.any? %>
            </div>
          </div>
          <div class="input-group input-group-outline row mx-0 mb-4">
            <%= f.label :password, class: "mx-0 mb-1 px-0 fw-bold" do %>
              新しいパスワード（半角英数字6文字以上）<span class="required">*</span>
            <% end %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "新しいパスワードを入力" %>
            <div class="<%= "error-message" if resource.errors.messages.key?(:password) %>" >
              <%= resource.errors.full_messages_for(:password).first if resource.errors.any? %>
            </div>
          </div>
          <div class="input-group input-group-outline row mx-0 mb-4">
            <%= f.label :password_confirmation, class: "mx-0 mb-1 px-0 fw-bold" do %>
              新しいパスワード（確認用）<span class="required">*</span>
            <% end %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "確認のため再度で入力" %>
            <div class="<%= "error-message" if resource.errors.messages.key?(:password_confirmation) %>" >
              <%= resource.errors.full_messages_for(:password_confirmation).first if resource.errors.any? %>
            </div>
          </div>
          <div class="mt-3 text-center ms-auto">
            <%= f.submit "変更する", class: "btn bg-gradient-primary mt-4 px-6 btn-lg" %>
          </div>
        <% end %>
        <div class="text-center">
          <%= link_to "アカウントを削除", registration_path(resource_name), class: "text-sm", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
        </div>
      </div>
    </div>
  </div>
</main>
