      <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
      <a class="navbar-brand m-0" href=" https://demos.creative-tim.com/material-dashboard/pages/dashboard " target="_blank">
        <img src="../assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
        <span class="ms-1 font-weight-bold text-white">Material Dashboard 2</span>
      </a>
    </div>
    <hr class="horizontal dark mt-0 mb-2">
    <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link text-dark " href="../pages/dashboard.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">dashboard</i>
            </div>
            <span class="nav-link-text ms-1">Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="../pages/tables.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">table_view</i>
            </div>
            <span class="nav-link-text ms-1">Tables</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="../pages/billing.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">receipt_long</i>
            </div>
            <span class="nav-link-text ms-1">Billing</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="../pages/virtual-reality.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">view_in_ar</i>
            </div>
            <span class="nav-link-text ms-1">Virtual Reality</span>
          </a>
        </li>
        <li class="nav-item mt-3">
          <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Account pages</h6>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white active bg-gradient-primary" href="../pages/profile.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">person</i>
            </div>
            <span class="nav-link-text ms-1">Profile</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="../pages/sign-in.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">login</i>
            </div>
            <span class="nav-link-text ms-1">Sign In</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-white " href="../pages/sign-up.html">
            <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
              <i class="material-icons opacity-10">assignment</i>
            </div>
            <span class="nav-link-text ms-1">Sign Up</span>
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <div class="main-content position-relative max-height-vh-100 h-100 my-7">
    <div class="container-fluid px-2 px-md-4">
      <div class="card card-body mx-3 mx-md-4 mt-n6 p-5">
        <h5 class="mb-5">プロフィールの編集</h5>
        <div class="row">
          <%= form_with model: resource, url: users_update_without_password_path, data: { turbo: false }, local: true do |f| %>
            <div class="row mb-4 input-group">
              <div class="col-sm-3 col-form-label-lg">
                <% if resource.avatar.attached? %>
                  <%= image_tag resource.avatar.variant(gravity: :center, resize:"100x100^", crop:"100x100+0+0").processed, id: 'image-preview', class: "rounded-circle resize-avatar" %>
                <% else %>
                  <%= image_tag "default_avatar.png", id: 'image-preview', class: "rounded-circle resize-avatar" %>
                <% end %>
              </div>
              <div class="form-edit col-sm-8 d-flex">
                <div class="my-auto">
                  <label type="button" class="btn btn-outline-primary fw-bold mx-0 mb-2">
                    <i class="material-icons opacity-10 mx-2">add_photo_alternate</i>画像を変更
                    <%= f.file_field :avatar, accept: "image/*", id: "image", class: "d-none" %>
                  </label>
                  <p class="text-xs">※「保存する」ボタンを押すまで画像の変更は保存されません。</p>
                  <div class="<%= "error-message" if resource.errors.messages.key?(:avatar) %>" >
                    <%= resource.errors.full_messages_for(:avatar).first if resource.errors.any? %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row mb-4 input-group input-group-outline">
              <%= f.label :name, class: "col-sm-3 col-form-label-lg m-0 fw-bold" do %>
                ニックネーム<span class="required">*</span>
              <% end %>
              <div class="form-edit col-sm-8">
                <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
                <div class="<%= "error-message" if resource.errors.messages.key?(:name) %>" >
                  <%= resource.errors.full_messages_for(:name).first if resource.errors.any? %>
                </div>
              </div>
            </div>
            <div class="row mb-4 input-group input-group-outline">
              <%= f.label :introduction, class: "col-sm-3 col-form-label-lg m-0 fw-bold" %>
              <div class="form-edit col-sm-8">
                <%= f.text_area :introduction, class: "form-control min-height-250", placeholder: "500文字以上で入力" %>
                <div class="<%= "error-message" if resource.errors.messages.key?(:introduction) %>" >
                  <%= resource.errors.full_messages_for(:introduction).first if resource.errors.any? %>
                </div>
              </div>
            </div>
            <div class="mt-3 text-center ms-auto">
              <%= f.submit "保存する", class: "btn bg-gradient-primary mt-4 px-6 btn-lg" %>
            </div>
          <% end %>
          <div class="text-center">
            <%= link_to "アカウントを削除", registration_path(resource_name), class: "text-sm", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="fixed-plugin">
    <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
      <i class="material-icons py-2">settings</i>
    </a>
  </div>
</body>
