<% provide :title, "ログイン" %>
<% if @invited_itinerary %>
  <% provide :itinerary_title, @invited_itinerary.title %>
  <% provide :itinerary_date, "#{l @invited_itinerary.departure_date} 〜 #{l @invited_itinerary.return_date}" %>
  <% provide :itinerary_image, @invited_itinerary.image.url %>
<% end %>
<main class="main-content mt-0 bg-pearl-white">
  <div class="page-header align-items-start min-vh-100" style="background-image: url(<%= asset_path 'sign_in.jpg' %>);">
    <span class="mask bg-white opacity-5"></span>
    <div class="container mt-7 mb-8">
      <div class="row">
        <div class="col-xl-4 col-lg-6 col-md-8 col-12 mx-auto">
          <div class="card z-index-0 fadeIn3 fadeInBottom border-radius-lg">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg py-4 pe-1">
                <h4 class="text-white font-weight-bolder text-center py-2 mb-0">ログイン</h4>
              </div>
            </div>
            <div class="card-body shadow">
              <div class="d-flex align-items-center mt-2">
                <hr class="w-100" color="#7b809a">
                <p class="text-center text-dark text-md fw-bold w-100 text-nowrap px-3">SNSで登録・ログイン</p>
                <hr class="w-100" color="#7b809a">
              </div>
              <div class="mt-2 mb-4 ms-auto">
                <%= link_to line_login_api_login_path(invitation_code: @invitation_code), class: "mt-0 mb-2 btn btn-lg bg-gradient-line line-login-btn w-100 d-flex align-items-center" do %>
                  <%= image_tag "LINE_login_btn_icon.png" %>
                  <div class="text-center flex-fill">LINEでアカウント登録・ログイン</div>
                <% end %>
                <p class="text-xs text-dark">※LINEアカウントにメールアドレスの登録が無い場合はご利用いただけません。</p>
              </div>
              <div class="d-flex align-items-center mt-4 pt-2">
                <hr class="w-100" color="#7b809a">
                <p class="text-center text-dark text-md fw-bold w-100 text-nowrap px-3">メールアドレスでログイン</p>
                <hr class="w-100" color="#7b809a">
              </div>
              <% if flash[:alert] %>
                <div class="mt-2 mb-3 p-2 border border-danger text-center text-sm text-danger"><%= alert %></div>
              <% end %>
              <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), data: { turbo: false } do |f| %>
                <%= (f.hidden_field :invited_itinerary_id, value: @invited_itinerary.id) if@invited_itinerary %>
                <div class="input-group input-group-outline mt-2 mb-3 <%= "is-filled" if resource[:email].present? %>">
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, class: "form-control", value: resource[:email] %>
                </div>
                <div class="input-group input-group-outline my-3">
                  <%= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                </div>
                <div class="text-center">
                  <%= f.submit "ログイン", class: "btn bg-gradient-primary w-100 mb-0 text-sm" %>
                </div>
              <% end %>
              <p class="text-sm text-center text-dark mt-3 pb-1">
                アカウントをお持ちでない方は
                <%= link_to "新規登録", :new_user_registration, data: { turbo: false }, class: "text-primary font-weight-bold hover-opacity" %>
              </p>
              <div class="mt-3 pt-3 border-top">
                <%= link_to :users_guest_sign_in, class: "mt-2 btn btn-outline-secondary w-100" do %>
                  <div class="text-center d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10 mx-2">person</i>ゲストログインはこちら
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
