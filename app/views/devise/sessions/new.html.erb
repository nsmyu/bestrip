<% provide :title, "ログイン" %>
<main class="main-content mt-0 bg-pearl-white">
  <div class="page-header align-items-start min-vh-100" style="background-image: url(<%= asset_path 'sign_in.jpg' %>);">
    <span class="mask bg-white opacity-5"></span>
    <div class="container mt-7 mb-8">
      <div class="row">
        <div class="col-xl-4 col-lg-6 col-md-8 col-12 mx-auto">
          <div class="card z-index-0 fadeIn3 fadeInBottom border-radius-lg">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg py-5 pe-1">
                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">ログイン</h4>
              </div>
            </div>
            <div class="card-body shadow">
              <div class="mt-3 text-center ms-auto">
                <%= link_to :users_guest_sign_in, class: "btn btn-outline-secondary w-100 mt-0 mb-3" do %>
                  <div class="text-center me-2 d-flex align-items-center justify-content-center">
                    <i class="material-icons opacity-10 mx-2">person</i>
                    ゲストログインはこちら
                  </div>
                <% end %>
              </div>
              <% if flash[:alert] %>
                <div class="p-2 border border-danger text-center text-sm text-danger"><%= alert %></div>
              <% end %>
              <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), data: { turbo: false } do |f| %>
                <%= (f.hidden_field :invited_itinerary_id, value: @itinerary.id) if @itinerary %>
                <div class="input-group input-group-outline my-3 <%= "is-filled" if resource[:email].present? %>">
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, class: "form-control", value: resource[:email] %>
                </div>
                <div class="input-group input-group-outline my-3">
                  <%= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
                </div>
                <div class="text-center">
                  <%= f.submit "ログイン", class: "btn bg-gradient-primary w-100 mt-4 mb-0 btn-lg" %>
                </div>
              <% end %>
              <p class="mt-4 text-sm text-center">
                アカウントをお持ちでない方は
                <%= link_to "新規登録", :new_user_registration, data: { turbo: false }, class: "text-primary text-gradient font-weight-bold" %>
              </p>
            </div>
            <%= link_to "LINEでログイン", line_login_api_login_path, class: "rounded-lg py-3 px-5 bg-blue-600 inline-block font-medium" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
