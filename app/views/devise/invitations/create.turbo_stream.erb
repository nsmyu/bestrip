<% if @invitation.errors.any? %>
  <%= turbo_stream.update "invitation_error" do %>
    <%= @invitation.errors.full_messages_for(:invitee).first %>
  <% end %>
<% elsif resource.errors.any? %>
  <%= turbo_stream.update "email_error" do %>
    <%= resource.errors.full_messages_for(:email).first %>
  <% end %>
<% end %>


