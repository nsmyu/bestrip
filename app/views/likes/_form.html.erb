<div id="like">
  <%= form_with url: likes_path do |f| %>
    <% if @post.liked_by? current_user %>
      <%= link_to [:like, id: @post.id], class: "d-flex justify-content-between align-items-center bg-transparent text-primary text-sm mb-0 lh-1", data: { turbo_method: :delete } do %>
        <i class="material-icons me-1">thumb_up</i>
        <span><%= @post.likes.count if @post.likes != [] %></span>
      <% end %>
    <% else %>
      <%= button_tag type: "submit", class: "d-flex border-0 bg-transparent hover-opacity text-secondary text-sm mb-0 p-0" do %>
        <i class="material-icons me-1">thumb_up</i>
        <span><%= @post.likes.count if @post.likes != [] %></span>
      <% end %>
    <% end %>
  <% end %>
</div>
