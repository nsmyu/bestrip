<%= turbo_frame_tag itinerary, class: "col-sm-6 mb-3 mb-sm-4 px-0" do %>
  <%= link_to [:itinerary, id: itinerary.id], class: "hover-opacity", data: { turbo: false } do %>
    <div class="card mx-sm-2 mx-md-3 p-3 p-md-4 cursor-pointer">
      <div class="row">
        <div class="col-5 col-sm-12">
          <%= image_tag itinerary.image.url, class: "mb-0 mb-sm-3 border-radius-lg w-100", alt: "旅のプラン「#{itinerary.title}」のイメージ画像" %>
        </div>
        <div class="col-7 col-sm-12 d-none d-sm-block">
          <p class="mb-0 text-dark fw-bold text-ellipsis"><%= itinerary.title %></p>
          <p class="text-dark text-sm"><%= l itinerary.departure_date %> 〜 <%= l itinerary.return_date %></p>
          <div class="mt-2 d-flex align-items-center text-dark">
            <i class="material-icons me-2">group</i>
            <p class="text-sm text-ellipsis"><%= member_names(itinerary) %></p>
          </div>
        </div>
        <div class="col-7 col-sm-12 py-1 ps-2 d-flex flex-column justify-content-between d-sm-none">
          <div>
            <p class="mb-1 text-dark fw-bold text-ellipsis"><%= itinerary.title %></p>
            <p class="text-dark text-xs"><%= l itinerary.departure_date %> 〜 <%= l itinerary.return_date %></p>
          </div>
          <div class="d-flex align-items-center text-dark text-ellipsis">
            <i class="material-icons me-2 text-md">group</i>
            <p class="text-xs text-ellipsis w-100"><%= member_names(itinerary) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
