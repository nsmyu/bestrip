<%= paginator.render do %>
  <nav>
    <ul class="pagination">
      <%= prev_page_tag unless current_page.first? %>
      <%= first_page_tag unless current_page.first? || current_page == 2 %>
      <% each_page do |page| %>
        <% if page.left_outer? || page.right_outer? || page.inside_window? %>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end %>
      <% end %>
      <%= last_page_tag unless current_page.last? || current_page == (total_pages - 1) %>
      <%= next_page_tag unless current_page.last? %>
    </ul>
  </nav>
<% end %>
